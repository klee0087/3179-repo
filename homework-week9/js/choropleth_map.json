{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "test",
    "width": 800,
    "height": 600,
    "projection": { "type": "equirectangular"},
    "data": {
      "url": "https://raw.githubusercontent.com/klee0087/3179-repo/main/homework-week9/js/world_geo_topo.json",
      "format": {
            "type": "topojson",
            "feature": "world_geo_topo"
          }
    },
    "transform": [{
        "lookup": "properties.sovereignt",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/klee0087/3179-repo/main/homework-week9/data/df_suicide_renamed.csv"
          },
          "key": "country",
          "fields": ["suicides_no", "population"]
        }
      },
      {"calculate": "datum.suicides_no/datum.population * 100000", "as": "Suicide Rates per 100k population"}
    ],
    "mark": {
      "type": "geoshape"
      },
    "encoding": {
      "color": {
        "field": "Suicide Rates per 100k population",
        "type": "quantitative",
        "scale": {
            "type": "threshold",
            "domain": [1, 10, 100],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
        }
      },
      "tooltip": [
        {"field": "properties.sovereignt", "type": "nominal", "title": "Country"},
        {"field": "Suicide Rates per 100k population", "type": "quantitative", "format": ".2f"}
      ]
    }
  
  }