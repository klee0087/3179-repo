{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/klee0087/3179-repo/main/visualisation-project2/data/suicide-rates-1985-to-2015-dataset-cleaned.csv"
    },
    "title": "Average Suicide Cases per Continent",
    "config": {
        "view": {
            "strokeWidth": 0,
            "step": 20,
            "discreteHeight": 200,
            "discreteWidth": 1100
        },
        "axis": {
            "domain": false
        }
    },
    "mark": "rect",
    "encoding": {
        "x": {
            "field": "year",
            "type": "ordinal",
            "timeUnit": "year",
            "title": "Year",
            "axis": {
                "labelAngle": 270
            }
        },
        "y": {
            "field": "continent",
            "type": "nominal",
            "title": "Continent"
        },
        "color": {
            "field": "suicides_per_100k_pop",
            "aggregate": "mean",
            "type": "quantitative",
            "scale": {"scheme": {"name": "yellowgreenblue"}},
            "legend": {
                "title": null
            }
        },
        "tooltip":[
            {"field": "year", "type": "ordinal", "timeUnit": "year", "title": "Year"},
            {"field": "continent", "type": "nominal", "title": "Continent"},
            {"field": "suicides_per_100k_pop", "aggregate": "mean", "format": ".2f", "title": "Average Cases per 100k Population"}
        ]
    }
  }